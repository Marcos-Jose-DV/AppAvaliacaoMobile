<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.DetailsPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             xmlns:converters="clr-namespace:Mobile.Converters"
             BackgroundColor="#ECECF6"
             Shell.BackgroundColor="#ECECF6"
             Title="{Binding Assessment.Category}">

    <ContentPage.Resources>
        <converters:ConcludedIsTrueOrFalseConverter x:Key="ConcludedIsTrueOrFalseConverter"/>
        <converters:TitleValueConverter x:Key="TitleValueConverter"/>
        <converters:AuthorValueConverter x:Key="AuthorValueConverter"/>
    </ContentPage.Resources>
    <ScrollView>
        <Grid >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#1534BC"
                      Offset="0.1" />
                    <GradientStop Color="#000"
                     Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            <BoxView Opacity="0.3" BackgroundColor="Black"/>
            <Grid IsVisible="{Binding DetailsIsVisible}"
                  ColumnDefinitions="200,Auto,*" 
                  RowDefinitions="300,*"
                  ColumnSpacing="20"
                  RowSpacing="20"
                  Margin="50">

                <Frame Grid.Row="{OnPlatform Android=0}"
                       Grid.Column="0"
                       VerticalOptions="Start"
                       Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="0"
                       WidthRequest="200"
                       HeightRequest="300">

                    <Image Source="{Binding Assessment.Image}"
                           Aspect="AspectFill"
                           WidthRequest="200"
                           HeightRequest="300"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="{Binding Assessment.Name}"
                           TextColor="#136CB2"
                           FontSize="18" 
                           Style="{StaticResource TitleDetalhes}"/>

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="{Binding Assessment.Duration}"
                               TextColor="#fff"
                               FontAttributes="None"/>
                        <Label Text="{Binding Assessment.Category,
                               Converter={converters:TitleValueConverter}}"                 
                               TextColor="#fff"
                               FontAttributes="None"
                               Style="{StaticResource TitleDetalhes}"/>
                        <Label Text="-"/>
                        <Label Text="{Binding Assessment.Gender}"
                               FontAttributes="None"
                               TextColor="#fff"
                               Style="{StaticResource TitleDetalhes}"/>
                    </HorizontalStackLayout>

                    <Label Text="{Binding Assessment.Assessment, StringFormat='Nota:  {0}'}"
                           FontAttributes="None"
                           TextColor="#fff"
                           Style="{StaticResource TitleDetalhes}"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Terminado:"
                               TextColor="#fff"
                               FontAttributes="None"
                               Style="{StaticResource TitleDetalhes}"/>
                        <Label Text="{Binding Assessment.Concluded, Converter={converters:ConcludedIsTrueOrFalseConverter}}"
                               TextColor="#fff"
                               FontAttributes="None"
                               Style="{StaticResource TitleDetalhes}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Assessment.Category, 
                        Converter={converters:AuthorValueConverter}}"
                               TextColor="#fff"
                               FontSize="14" 
                               FontAttributes="None"/>

                        <Label Text="{Binding Assessment.Director}"
                               TextColor="#136CB2"
                               FontAttributes="None"
                               FontSize="14" 
                               Style="{StaticResource TitleDetalhes}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="EndAndExpand"
                                       Spacing="10">

                    <Button Margin="0,0,0,0"
                            Command="{Binding EditCommand}"
                            Text="Editar"
                            FontAttributes="Bold"
                            BackgroundColor="#71E149"
                            WidthRequest="132"
                            HeightRequest="44"/>
                    <Button Margin="0,0,0,0"
                            Command="{Binding  PlayCommand}"
                            CommandParameter="{Binding Assessment.Name}"
                            Text="Play"
                            FontAttributes="Bold"
                            BackgroundColor="Black"
                            WidthRequest="132"
                            HeightRequest="44"/>
                    <Button ZIndex="2"
                            Margin="0,0,0,0"
                            Command="{Binding  DeleteCommand}"
                            CommandParameter="{Binding Assessment.Id}"
                            Text="Remover"
                            TextColor="White"
                            FontAttributes="Bold"
                            BackgroundColor="#F83030"
                            WidthRequest="132"
                            HeightRequest="44"/>
                </HorizontalStackLayout>
                <Editor Grid.Row="1"
                       Grid.ColumnSpan="3"
                       Text="{Binding Assessment.Comments}"
                       TextColor="#fff"
                       Placeholder="Nenhum comentario..."
                       PlaceholderColor="#fff"
                       FontFamily="OpenSansRegular"
                       FontAttributes="None"
                       Style="{StaticResource TitleDetalhes}"/>
            </Grid>

            <Grid IsVisible="{Binding EditIsVisible}"
                  Grid.Column="0" 
                  ColumnDefinitions="250,*" 
                  RowDefinitions="350,*"
                  ColumnSpacing="20"
                  RowSpacing="20"
                  Margin="50">

                <Border ZIndex="2"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="StartAndExpand"
                        BackgroundColor="Transparent"
                        WidthRequest="66" 
                        HeightRequest="66"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FileUploadCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="🔄️"
                          FontSize="26"/>
                </Border>

                <Frame Grid.Row="{OnPlatform Android=0}"
                       Grid.Column="0"
                       VerticalOptions="Start"
                       Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="0"
                       WidthRequest="250"
                       HeightRequest="350">

                    <Image Source="{Binding Image.Source}"
                           Aspect="AspectFill"/>
                </Frame>

                <Grid Grid.Column="1" 
                      Grid.Row="0" 
                      Grid.RowSpan="2" 
                      ColumnDefinitions="*,*" 
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                      RowSpacing="10"
                      ColumnSpacing="10">
                    <Entry Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="{Binding Assessment.Name}"
                           TextColor="#136CB2"
                           FontSize="18" 
                           Style="{StaticResource TitleDetalhes}"/>

                    <Entry Grid.Column="0"
                           Grid.Row="1"
                           Text="{Binding Assessment.Duration}"
                           TextColor="#fff"
                           FontAttributes="None"/>

                    <Entry Grid.Column="1"
                           Grid.Row="1"
                           Text="{Binding Assessment.Gender}"
                           FontAttributes="None"
                           TextColor="#fff"
                           Style="{StaticResource TitleDetalhes}"/>

                    <Entry Grid.Row="2"
                           Grid.ColumnSpan="2"
                           Text="{Binding Assessment.Assessment}"
                           FontAttributes="None"
                           TextColor="#fff"
                           Style="{StaticResource TitleDetalhes}"/>

                    <HorizontalStackLayout Grid.Row="3" Spacing="5">
                        <Label Text="Terminado" 
                               HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center"
                               FontAttributes="None"
                               TextColor="#fff"
                               FontSize="16"
                               Opacity=".6"/>
                        <CheckBox IsChecked="{Binding  Assessment.Concluded}"  Color="#136CB2"/>
                    </HorizontalStackLayout>

                    <Entry Grid.Row="4"
                           Grid.ColumnSpan="2"
                           Text="{Binding Assessment.Director}"
                           TextColor="#136CB2"
                           FontAttributes="None"
                           FontSize="14" 
                           Style="{StaticResource TitleDetalhes}"/>

                    <HorizontalStackLayout Grid.Row="5" Spacing="10">
                        <Label Text="Categoria"
                               VerticalTextAlignment="Center"
                               HorizontalOptions="Center"
                               TextColor="#fff"
                               FontAttributes="None"
                               FontSize="16"
                               Opacity=".6"/>
                        <Picker ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding Assessment.Category}"
                                TextColor="#fff"/>
                    </HorizontalStackLayout>
                </Grid>

                <HorizontalStackLayout Grid.Column="1"
                                       HorizontalOptions="EndAndExpand"
                                       VerticalOptions="EndAndExpand"
                                       Spacing="20">

                    <Button Grid.Column="1"
                            Command="{Binding SaveCommand}"
                            Text="Salvar"
                            BackgroundColor="#3068F8"
                            FontAttributes="Bold"
                            WidthRequest="100"
                            HeightRequest="44"/>
                    <Button Grid.Column="1"
                            Command="{Binding EditCommand}"
                            Text="Cancelar"
                            BackgroundColor="#F83030"
                            FontAttributes="Bold"
                            WidthRequest="132"
                            HeightRequest="44"/>
                    <Button Grid.Column="1"
                            Command="{Binding CleanCommand}"
                            Text="Limpar"
                            BackgroundColor="MediumBlue"
                            FontAttributes="Bold"
                            WidthRequest="132"
                            HeightRequest="44"/>
                </HorizontalStackLayout>
                <Editor Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Text="{Binding Assessment.Comments}"
                        TextColor="#fff"
                        Placeholder="Comentarios..."
                        FontFamily="OpenSansRegular"
                        FontAttributes="None"
                        Style="{StaticResource TitleDetalhes}"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>