<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.AddCardPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="#ECECF6"
             Title="AddCardPage">
    <Grid Grid.Column="0" 
          ColumnDefinitions="250,*" 
          RowDefinitions="350,*"
          ColumnSpacing="20"
          RowSpacing="20"
          Margin="0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="#1534BC"
          Offset="0.1" />
                <GradientStop Color="#000"
         Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <BoxView Opacity="0.3" BackgroundColor="Black"/>

        <Border ZIndex="2"
               HorizontalOptions="StartAndExpand"
               VerticalOptions="StartAndExpand"
               BackgroundColor="Transparent"
               WidthRequest="66" 
               HeightRequest="66"
               StrokeThickness="0">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding FileUploadCommand}"/>
            </Border.GestureRecognizers>
            <Label Text="ðŸ”„ï¸"
              FontSize="26"/>
        </Border>

        <Frame Grid.Row="{OnPlatform Android=0}"
               Grid.Column="0"
               VerticalOptions="Start"
               Padding="0"
               HasShadow="True"
               BorderColor="LightGray"
               CornerRadius="0"
               WidthRequest="250"
               HeightRequest="350">

            <Image Source="{Binding Image.Source}"
                   Aspect="AspectFill"/>
        </Frame>

        <Grid Grid.Column="1" 
              Grid.Row="0" 
              Grid.RowSpan="2" 
              ColumnDefinitions="*,*" 
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
              RowSpacing="10"
              ColumnSpacing="10"
              Margin="0">
            <Entry Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="{Binding Assessment.Name}"
                   Placeholder="Nome"
                   FontAttributes="None"
                   FontSize="16"/>

            <Entry Grid.Column="0"
                   Grid.Row="1"
                   Text="{Binding Assessment.Duration}"
                   Placeholder="DuraÃ§Ã£o"
                   TextColor="White"
                   FontSize="16" 
                   FontAttributes="None"/>

            <Entry Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding Assessment.Gender}"
                   FontAttributes="None"
                   Placeholder="Genero"
                   FontSize="16" 
                   TextColor="White"/>

            <Entry Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Text="{Binding Assessment.Assessment}"
                   Placeholder="Nota"
                   FontAttributes="None"
                   TextColor="White"
                   FontSize="16" />

            <HorizontalStackLayout Grid.Row="3">
                <Label Text="Assistir" 
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center"
                       FontAttributes="None"
                       TextColor="White"
                       FontSize="16"/>
                <CheckBox IsChecked="{Binding  Assessment.Concluded}" />
            </HorizontalStackLayout>

            <Entry Grid.Row="4"
                   Grid.ColumnSpan="2"
                   Text="{Binding Assessment.Director}"
                   Placeholder="Diretor/Autor"
                   PlaceholderColor="White"
                   FontAttributes="None"
                   FontSize="16"/>

            <HorizontalStackLayout Grid.Row="5" Spacing="10">
                <Label Text="Categoria"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontAttributes="None"
                       FontSize="16"/>
                <Picker ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding Assessment.Category}"/>
            </HorizontalStackLayout>
        </Grid>

        <HorizontalStackLayout Grid.Column="1"
                               HorizontalOptions="EndAndExpand"
                               VerticalOptions="EndAndExpand"
                               Spacing="20">

            <Button Grid.Column="1"
                    Command="{Binding SaveCommand}"
                    Text="Salvar"
                    BackgroundColor="#3068F8"
                    WidthRequest="100"
                    HeightRequest="44"/>
            <Button Grid.Column="1"
                    Command="{Binding BackCommand}"
                    Text="Cancelar"
                    BackgroundColor="#F83030"
                    WidthRequest="132"
                    HeightRequest="44"/>
            <Button Grid.Column="1"
                    Command="{Binding CleanCommand}"
                    Text="Limpar"
                    BackgroundColor="LightGray"
                    WidthRequest="132"
                    HeightRequest="44"/>
        </HorizontalStackLayout>
        <Editor Grid.Row="1"
                Grid.ColumnSpan="3"
                Text="{Binding Assessment.Comments}"
                TextColor="#333333"
                FontFamily="OpenSansRegular"
                FontAttributes="None"
                Style="{StaticResource TitleDetalhes}"/>
    </Grid>
</ContentPage>